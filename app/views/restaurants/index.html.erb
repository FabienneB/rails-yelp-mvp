
<% @restaurants.each do |restaurant| %>

<ul>
  <li>
    Name :
    <%= link_to restaurant.name,  restaurant_path(restaurant.id) %> -
    Address :
    <%= restaurant.address %> -
    Phone number :
    <%= restaurant.phone_number %> -
    Category :
    <%= restaurant.category %>
    <%= link_to "Edit", edit_restaurant_path(restaurant)  %>
