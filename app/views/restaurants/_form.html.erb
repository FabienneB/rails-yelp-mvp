<%= simple_form_for(@restaurant) do |r| %>
  <%= r.input :name, label: 'Name', error: 'Please specify one'  %>
  <%= r.input :address, label: 'Address', error: 'Please specify one'  %>
  <%= r.input :phone_number, label: 'Phone number' %>
  <%= r.input :category, collection: ["Chinese", "Italian", "Japanese", "French", "Belgian"], as: :select, label: 'Category' %>
  <%= r.submit 'GO !', class: "btn btn-primary btn-large btn-block" %>

<% end %>


