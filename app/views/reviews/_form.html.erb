<%= simple_form_for [@restaurant, @review], class: "form-group" do |r| %>
  <%= r.input :content, label: 'What did you think?', error: 'Please specify one' , class: "form-control"  %>
  <%= r.input :rating, label: 'What did you think?', error: 'Please specify one', class: "form-control" %>
  <%= r.submit 'GO !', class: "btn btn-primary btn-large btn-block" %>
<% end %>
